<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Books</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>
  </head>
  <body class="min-h-screen bg-gradient-to-t from-zinc-900 via-gray-900 to-slate-900 text-white p-6">
    <div class="max-w-5xl mx-auto">

      <div class="flex justify-between items-center mb-6">
        <h1 class="text-4xl font-bold">ðŸ“š Books</h1>
        <a href="/books/add" class="bg-gradient-to-r from-violet-900 to-fuchsia-900 hover:bg-purple-700 text-white px-4 py-2 rounded-lg shadow-md transition">
          + Add Book
        </a>
      </div>

      <% if (messages.success) { %>
        <div class="bg-green-600/20 border border-green-400 text-green-300 px-4 py-2 rounded mb-4 shadow">
          <%- messages.success %>
        </div>
      <% } %>

      <% if (messages.error) { %>
        <div class="bg-red-600/20 border border-red-400 text-red-300 px-4 py-2 rounded mb-4 shadow">
          <%- messages.error %>
        </div>
      <% } %>

      <% if (data.length) { %>
        <div class="overflow-x-auto bg-white/5 backdrop-blur-sm rounded-2xl shadow-lg">
          <table class="min-w-full text-sm text-gray-200">
            <thead class="bg-white/10 text-gray-300 uppercase text-xs">
              <tr>
                <th class="text-left px-6 py-3">#</th>
                <th class="text-left px-6 py-3">Name</th>
                <th class="text-left px-6 py-3">Author</th>
                <th class="text-left px-6 py-3">Action</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((book, i) => { %>
                <tr class="border-t border-white/10 hover:bg-white/10 transition">
                  <td class="px-6 py-3"><%= i + 1 %></td>
                  <td class="px-6 py-3"><%= book.name %></td>
                  <td class="px-6 py-3"><%= book.author %></td>
                  <td class="px-6 py-3 space-x-2">
                    <a href="/books/edit/<%= book.id %>" class="bg-yellow-500 hover:bg-yellow-600 text-black px-3 py-1 rounded text-sm shadow transition">Edit</a>
                    <a href="/books/delete/<%= book.id %>" onclick="return confirm('Are you sure?')" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm shadow transition">Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center text-gray-300 mt-10 text-lg">No book found!</p>
      <% } %>

    </div>
  </body>
</html>
